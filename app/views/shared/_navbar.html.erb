<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-logo">
    <%= link_to "/dashboard", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      <p class="logo-text">Kinzame</p>
    <% end %>
  </div>
<!-- TODO Change below logic to check if current user -->
  <% if user_signed_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= image_tag "https://avatars2.githubusercontent.com/u/31160338?s=460&v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
    </div>
  <% else %>
  <div class="navbar-login">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Login/Sign up", new_user_session_path, class: "nav-link btn btn-main" %>
      </li>
    </ul>
  </div>
  <% end %>
</div>
