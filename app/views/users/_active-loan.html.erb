<% unless @borrower_active.empty? %>
  <div class="container">
    <div class="my-5">
      <h2>Active Loan</h2>
    </div>
    <% @contracts.where(repaid_lender: false, approved: true).each do |active_loan| %>
      <button type="button" class='card loan loan-active' data-toggle="collapse" data-target="#a-<%= active_loan.id %>" aria-expanded="false" aria-controls="<%= active_loan.id %>">
        <%= render "users/loan-card", contract: active_loan %>
      </button>
      <!-- collapsing function   -->
      <div class="collapse" id="a-<%= active_loan.id %>">
        <div class="contract-content">
          <%= render "users/loan-dropdown", pending_loan: active_loan %>
        </div>
      </div>
      <!-- / collapsing function     -->
    <% end %>
  </div>
<% end %>