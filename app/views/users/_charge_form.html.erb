<%= simple_form_for current_user, url: recharge_path  do |f| %>
  <div class="form-inline loan-form-inline my-5">
    <h3 class="m-auto">Your wallet balance is <%= number_to_currency(current_user.money_available, unit: '￥', precision: 0) %></h3>
  </div>
  <div class="form-inline loan-form-inline">
    <%= f.label :wallet, "Amount:" %>
    <div class="input-icon">
      <%= f.input :wallet, input_html: {min: 10000, max: 200000, step: 10000}, label: "Amount", placeholder: "0", class: "loan-input loan-amount", label: false%>
      <%= f.input :old_wallet, as: :hidden, input_html: { value: current_user.wallet } %>
      <i>￥</i>
    </div>
  </div>
  <%= f.button :submit, class: "btn btn-approve w-100" %>
<% end %>