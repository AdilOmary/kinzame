<% status = "" %>
<% if contract.approved == false %>
  <% status = " wants to borrow" %>
<% elsif contract.repaid_loan %>
  <% status = " borrowed" %>
<% elsif contract.rejected %>
<% status = " was rejected ->" %>
<% else %>
  <% status = " is borrowing" %>
<% end %>
<div class="contract-amount">
  <p><%= contract.user.first_name %> <%= contract.user.last_name[0] %>.<%= status %> ï¿¥<%= contract.loan.amount %> over <%= contract.loan.duration %> days.</p>
</div>

